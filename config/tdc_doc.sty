%%%
% Header
\newcommand{\shortDepartment}{\empty}
\newcommand{\setShortDepartment}[1]{%
  \renewcommand{\shortDepartment}{#1}%
}
\setShortDepartment{PA}

\newcommand{\entity}{\empty}
\newcommand{\setEntity}[1]{%
	\renewcommand{\entity}{#1}%
}
\define@key{header}{entity}{\setEntity{#1}}
\setEntity{TDC Group A/S}

\newcommand{\department}{\empty}
\newcommand{\setDepartment}[1]{%
  \renewcommand{\department}{#1}%
  \setShortDepartment{#1}
}
\define@key{header}{department}{\setDepartment{#1}}
\setDepartment{Predictive Analytics}

\newcommand{\staticDate}{\empty}
\newcommand{\setStaticDate}[1]{%
	\renewcommand{\staticDate}{#1}\date{#1}%
}
\define@key{header}{staticDate}{\setStaticDate{#1}}
\setStaticDate{\today}

\newcommand{\project}{\empty}
\newcommand{\setProject}[1]{%
	\renewcommand{\project}{#1}\title{#1}\hypersetup{pdftitle={#1}}%
}
\define@key{header}{project}{\setProject{#1}}

\newcommand{\author}{\empty}
\newcommand{\setAuthor}[1]{%
	\renewcommand{\author}{#1}\title{#1}\hypersetup{pdftitle={#1}}%
}
\define@key{header}{project}{\setAuthor{#1}}

